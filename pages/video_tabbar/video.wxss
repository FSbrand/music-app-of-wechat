/* pages/video_tabbar/video.wxss */

.videocontainer .header{
    display: flex;
    padding-top: 10rpx;
  }
  
  .header image{
    width: 60rpx;
    height: 60rpx;
    margin-left: 10rpx;
  }
  
  .search{
    border: 1rpx solid #eee;
    border-radius: 30rpx;
    flex: 1;
    margin: 0 20rpx;
    font-size: 26rpx;
    line-height: 60rpx;
    text-align: center;
    color: #d43c33;
  }
  
  /* 导航区域的样式 */
  .navScroll{
    display: flex;
    white-space: nowrap;
    height: 70rpx;
  }
  
  .navScroll .navItem{
    padding: 5rpx 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
  
  }
  
  .navScroll .navContent{
    box-sizing:border-box;
  }
  
  .navItem .active{
    border-bottom: 1rpx solid #d43c33;
  }
  
  
  /*  视频列表的样式  */
  .videoScroll{
    padding-top: 10rpx;
    height: calc(100vh - 152rpx);
  }
  
  .videoItem{
    padding: 0 3%;
  }
  
  .videoItem video{
    width: 100%;
    height: 360rpx;
    border-radius: 15rpx;
  }
  .videoItem image{
    width: 100%;
    height: 360rpx;
    border-radius: 15rpx;
  }
  
  .videoItem .content {
    font-size: 27rpx;
    height:100rpx;
    line-height: 80rpx;
    max-width: 650rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* information */
  .information {
    border-top: 1rpx solid #eee;
    padding-top: 35rpx;
    padding-bottom: 20rpx;
  }
  .information .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
  }
  
  .information  .nickName {
    font-size: 26rpx;
    vertical-align: middle;
    margin-left: 20rpx;
  }
  
  .comments_praised {
    float: right;
  }
  
  .comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
  }
  
  .comments_praised .btn:after {
    border: none;
  }
  
  .comments_praised .item {
    margin-left: 50rpx;
    position: relative;
  }